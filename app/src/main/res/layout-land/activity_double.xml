<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.pedram.hoshebartar.Double">


    <LinearLayout
        android:id="@+id/left_jam"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#0099cc">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:id="@+id/double_jam_btn_play"
                android:padding="8dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button"/>

            <Chronometer
                android:id="@+id/double_jam_chronometer"
                android:layout_marginLeft="50dp"
                android:textSize="32sp"
                android:textColor="#6a029e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:background="@drawable/ghalat"
                android:id="@+id/tv_false_double_jam"
                android:gravity="center"
                android:textColor="@color/incorrect_answer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"/>
            <TextView
                android:layout_toLeftOf="@id/tv_false_double_jam"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/correct_answer"
                android:id="@+id/tv_true_double_jam"
                android:gravity="center"
                android:background="@drawable/dorost"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:textColor="@color/prompt_color"
                android:textStyle="bold"
                android:id="@+id/tv_double_jam_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="press the play!"
                android:textSize="40sp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                />


        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/baghye"
            android:layout_margin="10dp">

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_zarb"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#0099cc">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:id="@+id/right_zarb_btn_play"
                android:padding="8dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button"/>

            <Chronometer
                android:id="@+id/right_zarb_chronometer"
                android:layout_marginLeft="50dp"
                android:textSize="32sp"
                android:textColor="#6a029e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:background="@drawable/ghalat"
                android:id="@+id/tv_false_right_zarb"
                android:gravity="center"
                android:textColor="@color/incorrect_answer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"/>
            <TextView
                android:layout_toLeftOf="@id/tv_false_right_zarb"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/correct_answer"
                android:id="@+id/tv_true_right_zarb"
                android:gravity="center"
                android:background="@drawable/dorost"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:textColor="@color/prompt_color"
                android:textStyle="bold"
                android:id="@+id/tv_right_zarb_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="press the play!"
                android:textSize="40sp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/baghye2"
            android:layout_margin="10dp">

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>


